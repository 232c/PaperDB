{
  "name": "@paper-db/paper-db",
  "description": "The distributed, peer-to-peer, Firestore-like No-SQL database solution, based on IPFS and Orbit-DB",
  "version": "0.2.2",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PaperDB/PaperDB.git"
  },
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/PaperDB/PaperDB/issues"
  },
  "homepage": "https://github.com/PaperDB/PaperDB#readme",
  "files": [
    "dist",
    "src",
    "tsconfig.json",
    ".eslintrc"
  ],
  "dependencies": {
    "@paper-db/kv-storage": "^2.0.3",
    "@paper-db/orbit-db": "^0.24.0",
    "@types/orbit-db": "git+https://github.com/PaperDB/orbit-db-types.git",
    "fake-indexeddb": "^3.0.0",
    "fs-extra": "^8.1.0",
    "ipfs": "^0.42.1",
    "ipfs-http-client": "^43.0.1",
    "ipfs-utils": "*",
    "is-ipfs": "*",
    "libp2p-crypto": "^0.17.5",
    "p-map": "^4.0.0",
    "tslib": "^1.11.1"
  },
  "devDependencies": {
    "@types/bs58": "^4.0.1",
    "@types/fs-extra": "^8.1.0",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.35",
    "jest": "^25.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "verbose": true,
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/src/$1"
    },
    "coveragePathIgnorePatterns": [
      "<rootDir>/test/",
      "<rootDir>/node_modules/"
    ]
  },
  "scripts": {
    "build": "tsc -p src",
    "watch": "npm run build -- --watch",
    "clean": "rimraf dist",
    "test": "jest --coverage --runInBand --forceExit"
  }
}
